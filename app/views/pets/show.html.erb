<h1><%= @pet.name %>'s Profile</h1>

<div class="pet-info">
  <% if @pet.image.attached? %>
    <%= cl_image_tag @pet.image.key %>
  <% end %>

  <p><strong>Name :</strong> <%= @pet.name %></p>
  <p><strong>Species :</strong> <%= @pet.species%></p>
  <p><strong>Description :</strong> <%= @pet.description %></p>

<%= link_to "Back to Profile", profile_path(@pet.user), class: "btn btn-secondary" %>

<%= link_to "Delete Pet", pet_path(@pet), method: :delete, data: { confirm: "Are you sure you want to delete this pet?" }, class: "btn btn-danger" %>
