<div class="container mt-4">
  <!-- Titre -->
  <div class="text-center mb-4">
    <h1 class="text-primary"><%= @pet.name %>'s Profile</h1>
  </div>

  <!-- Carte principale -->
  <div class="card shadow-lg p-4">
    <!-- Photo de l'animal -->
    <div class="text-center mb-4">
      <% if @pet.image.attached? %>
        <%= cl_image_tag @pet.image.key, alt: "Pet photo", class: "img-fluid rounded shadow", style: "max-height: 300px; object-fit: cover;" %>
      <% else %>
        <%= image_tag "pets/default_pet_image.jpg", alt: "Default pet photo", class: "img-fluid rounded shadow", style: "max-height: 300px; object-fit: cover;" %>
      <% end %>
    </div>

    <!-- Informations de l'animal -->
    <div class="text-center mb-3">
      <h3 class="text-secondary">üêæ <%= @pet.name %></h3>
      <p><strong>Species:</strong> <%= @pet.species %></p>
      <p><strong>About:</strong> <%= @pet.description || "No description provided." %></p>
    </div>

    <!-- Boutons d'action -->
    <div class="text-center mt-3">
      <%= link_to "Back to Profile", profile_path(@pet.user), class: "btn btn-outline-secondary me-2" %>
      <%= link_to "Delete Pet", pet_path(@pet), method: :delete, data: { confirm: "Are you sure you want to delete this pet?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
