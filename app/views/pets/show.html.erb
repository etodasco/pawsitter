<div class="container mt-1">
  <!-- Titre -->
  <div class="text-center mb-2">
    <h1 class="mt-0">
      <span class="text-secondary" style="font-size: 1.5rem;">🐾</span> <%= @pet.name.capitalize %>'s Profile <span class="text-secondary" style="font-size: 1.5rem;">🐾</span>
    </h1>
  </div>

  <!-- Carte -->
  <div class="card shadow-lg p-3">
    <div class="row align-items-center">
      <!-- Photo pet -->
      <div class="col-4 text-center">
        <% if @pet.image.attached? %>
          <%= cl_image_tag @pet.image.key, alt: "Pet photo", class: "img-fluid rounded shadow", style: "max-height: 200px; object-fit: cover;" %>
        <% else %>
          <%= image_tag "pets/default_pet_image.jpg", alt: "Default pet photo", class: "img-fluid rounded shadow", style: "max-height: 200px; object-fit: cover;" %>
        <% end %>
      </div>

      <!-- Informations du pet -->
      <div class="col-8">
        <p><strong>Species:</strong> <%= @pet.species.capitalize %></p>
        <p><strong>About <%=@pet.name%> :</strong> <%= @pet.description || "No description provided." %></p>
      </div>
    </div>

    <!-- Boutons -->
    <div class="text-center mt-3">
      <%= link_to "Back to Profile", profile_path(@pet.user), class: "btn btn-back-to-profile me-2" %>
      <%= link_to "Delete Pet", pet_path(@pet), method: :delete, data: { confirm: "Are you sure you want to delete this pet?" }, class: "btn btn-delete-pet" %>
    </div>
  </div>
</div>
