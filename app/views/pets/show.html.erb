<h1><%= @pet.name %>'s Profile</h1>

<div class="pet-info">
  <% if @pet.image.attached? %>
    <%= cl_image_tag @pet.image.key %>
  <% end %>

  <!-- Affichage de la photo -->
  <% if @pet.image.attached? %>
    <div class="pet-photo mb-4">
      <%= image_tag @pet.image.variant(resize_to_limit: [300, 300]), class: "img-fluid rounded shadow" %>
    </div>
  <% else %>
    <div class="pet-photo mb-4">
      <%= image_tag "rotweille.jpg", alt: "Default pet image", class: "img-fluid rounded shadow" %>
    </div>
  <% end %>

  <!-- Informations personnelles -->
  <h3>Personal Information</h3>
  <p><strong>Name:</strong> <%= @pet.name %></p>
  <p><strong>Species:</strong> <%= @pet.species %></p>
  <p><strong>Description:</strong> <%= @pet.description || "No description provided." %></p>

  <!-- Boutons d'action -->
  <div class="action-buttons mt-4">
    <%= link_to "Back to Profile", profile_path(@pet.user), class: "btn btn-secondary" %>
    <%= link_to "Delete Pet", pet_path(@pet), method: :delete, data: { confirm: "Are you sure you want to delete this pet?" }, class: "btn btn-danger" %>
  </div>
</div>
