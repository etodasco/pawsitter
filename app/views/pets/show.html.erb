
<div class="container mt-4">
  <!-- Titre -->
  <div class="text-center mb-4">
    <h1><%= @pet.name %>'s Profile</h1>
  </div>

  <!-- Carte principale -->
  <div class="card shadow-sm p-3">
    <!-- Photo de l'animal -->
    <div class="text-center mb-4">
      <% if @pet.image.attached? %>
        <%= cl_image_tag @pet.image.key, class: "img-fluid rounded shadow", style: "max-height: 300px; object-fit: cover;" %>
      <% else %>
        <div class="pet-photo">
          <%= image_tag "rotweille.jpg", alt: "Default pet image", class: "img-fluid rounded shadow", style: "max-height: 300px; object-fit: cover;" %>
        </div>
      <% end %>
    </div>

    <!-- Informations personnelles -->
    <div class="card-body">
      <h3 class="text-secondary mb-3">Personal Information</h3>
      <p><strong>Name:</strong> <%= @pet.name %></p>
      <p><strong>Species:</strong> <%= @pet.species %></p>
      <p><strong>Description:</strong> <%= @pet.description || "No description provided." %></p>
    </div>

    <!-- Boutons d'action -->
    <div class="text-center mt-4">
      <%= link_to "Back to Profile", profile_path(@pet.user), class: "btn btn-outline-primary me-2" %>
      <%= link_to "Delete Pet", pet_path(@pet), method: :delete, data: { confirm: "Are you sure you want to delete this pet?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
