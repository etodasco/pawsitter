<h1>Create a Pet Profile</h1>

<%= form_with model: @pet, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "Name of your pet" %>
  </div>


  <div class="form-group">
    <%= form.label :species %>
    <%= form.text_field :species, class: "form-control", placeholder: "Breed of your pet" %>
  </div>


  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", placeholder: "Description of your pet" %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: "form-control" %>
  </div>
  <div class="mt-3">
  <%= form.submit "Create", class: "btn btn-primary" %>
  </div>
</div>

<% end %>
