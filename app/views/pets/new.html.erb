<h1>Create a Pet Profile</h1>

<%= form_with model: @pet, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "Name of your pet" %>
  </div>

  <div class="form-group">
    <%= form.label :species %>
    <%= form.select :species, Pet::SPECIES, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :breed %>
    <%= form.text_field :breed, class: "form-control", placeholder: "Breed of your pet" %>
  </div>

  <div class="form-group">
    <%= form.label :age %>
    <%= form.number_field :age, class: "form-control", placeholder: "Age of your pet" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", placeholder: "Description of your pet" %>
  </div>

  <div class="form-group
    <%= form.label :photo %>
    <%= form.file_field :photo, class: "form-control" %>

    <%= f.submit "Create Pet Profile", class: "btn btn-primary" %>
<% end %>
