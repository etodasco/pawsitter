<h1>Create a Pet Profile</h1>

<%= form_with model: @pet, local: true do |form| %>
  <!-- Name -->
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "Name of your pet" %>
  </div>

  <!-- Species -->
  <div class="form-group">
    <%= form.label :species %>
    <%= form.text_field :species, class: "form-control", placeholder: "Breed or species of your pet" %>
  </div>

  <!-- Age -->
  <div class="form-group">
    <%= form.label :age %>
    <%= form.number_field :age, class: "form-control", placeholder: "Age of your pet" %>
  </div>

  <!-- Description -->
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", placeholder: "Write a brief description about your pet" %>
  </div>

  <!-- Image -->
  <div class="form-group">
    <%= form.label :image, "Upload a photo of your pet" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <!-- Submit Button -->
  <div class="mt-3">
    <%= form.submit "Create", class: "btn btn-primary" %>
  </div>
<% end %>
