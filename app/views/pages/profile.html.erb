<div class="container mt-4">
  <!-- Header Section -->
  <div class="text-center mb-4">
    <h1>ðŸ‘¤ <%= @user.nickname.to_s.capitalize || @user.first_name.to_s.capitalize %>'s Profile Page: </h1>
  </div>

<div class="card shadow-sm p-4">
    <div class="row mb-3">
      <div class="col-12 text-center">
        <h3 class="text-primary"><%= @user.nickname || "No Nickname" %></h3>
      </div>
    </div>

<div class="card mb-4 shadow-sm">
  <div class="card-body">
    <h3 class="user-info">Personal Information</h3>
     <div class="col-md-6 mb-3">
        <div class="row">
      <!-- First Column -->
      <div class="col-md-6 mb-3">
        <p><i class="fas fa-user me-2 text-secondary"></i><strong>First Name:</strong> <%= @user.first_name || "Not provided" %></p>
        <p><i class="fas fa-user me-2 text-secondary"></i><strong>Last Name:</strong> <%= @user.last_name ||  "Not provided" %></p>
        <p><i class="fas fa-user me-2 text-secondary"></i><strong>Nickname:</strong> <%= @user.nickname || "Not provided" %></p>
      </div>

      <!-- Second Column -->
      <div class="col-md-6 mb-3">
        <p><i class="fas fa-envelope me-2 text-secondary"></i><strong>Email:</strong> <%= @user.email %></p>
        <p><i class="fas fa-map-marker-alt me-2 text-secondary"></i><strong>Address:</strong> <%= @user.address || "Not provided" %></p>
        <p><i class="fas fa-align-left me-2 text-secondary"></i><strong>About me:</strong> <%= @user.description || "Not provided" %></p>
      </div>
    </div>

 <!-- Rating Section -->
    <div class="text-center">
      <h4><i class="fas fa-star text-warning me-2"></i>Rating:</h4>
      <p><strong><%= @user.average_rating || 0 %>/5</strong></p>
    </div>
  </div>

  <hr>


<div class="pets mt-4">
  <h3 class="user-info">My Pets</h3>
  <% if @pets.any? %>
    <div class="row">
      <% @pets.each do |pet| %>
        <div class="col-md-4 mb-3">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= pet.name %> - <%= pet.species.capitalize %></h5>
              <%= link_to "View Details", pet_path(pet), class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">You did not add a pet yet.</p>
  <% end %>
  <%= link_to '<i class="fas fa-paw"></i> Add a New Pet'.html_safe, new_pet_path, class: "btn btn-primary mt-2" %>


</div>



<div class="text-center mt-4">
  <%= link_to "Update Profile", edit_user_registration_path, class: "btn btn-outline-primary btn-lg" %>
</div>



</div>
