
<div class="container mt-4">
  <!-- Header Section -->
  <div class="text-center mb-4">
    <h1>ðŸ‘¤ <%= @pet_sitter_profile.nickname.capitalize %>'s Profile Page:</h1>
  </div>

  <div class="card shadow-sm p-4">
    <div class="row mb-3">
      <div class="col-12 text-center">
        <h3 class="text-primary"><%= @pet_sitter_profile.nickname %> <%= @pet_sitter_profile.last_name %></h3>
      </div>
    </div>

    <!-- Personal Information -->
    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        <h3 class="user-info">Personal Information</h3>
        <div class="col-md-6 mb-3">
          <div class="row">
            <!-- First Column -->
            <div class="col-md-6 mb-3">
              <p><i class="fas fa-user me-2 text-secondary"></i><strong>First Name:</strong> <%= @pet_sitter_profile.first_name || "Not provided" %></p>
              <p><i class="fas fa-user me-2 text-secondary"></i><strong>Last Name:</strong> <%= @pet_sitter_profile.last_name || "Not provided" %></p>
              <p><i class="fas fa-user me-2 text-secondary"></i><strong>Nickname:</strong> <%= @pet_sitter_profile.nickname || "Not provided" %></p>
            </div>

            <!-- Second Column -->
            <div class="col-md-6 mb-3">
              <p><i class="fas fa-envelope me-2 text-secondary"></i><strong>Email:</strong> <%= @pet_sitter_profile.email %></p>
              <p><i class="fas fa-map-marker-alt me-2 text-secondary"></i><strong>Address:</strong> <%= @pet_sitter_profile.address || "Not provided" %></p>
            </div>
          </div>

          <!-- Rating Section -->
          <div class="text-center">
            <h4><i class="fas fa-star text-warning me-2"></i>Rating:</h4>
            <p><strong><%= @pet_sitter_profile.average_rating || 0 %>/5</strong></p>
          </div>
        </div>
      </div>
    </div>

    <hr>
