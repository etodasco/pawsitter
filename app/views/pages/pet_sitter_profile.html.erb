<div class="container mt-4">
  <!-- Header -->
  <div class="text-center mb-4">

    <h1> <%= @pet_sitter_profile.nickname.capitalize %>'s Info</h1>

  </div>

  <!-- Carte principale -->
  <div class="petsitter_card card p-3 d-flex flex-row align-items-start">
    <!-- Photo du pet sitter -->
    <div class="me-3" style="width: 250px; height: 150px;">
      <% if @pet_sitter_profile.image.attached? %>
        <%= cl_image_tag @pet_sitter_profile.image.key, alt: "Pet sitter profile photo", class: "img-fluid shadow", style: "height: 100%; width: 100%; object-fit: cover; border-radius: 15px;" %>
      <% else %>
        <%= image_tag "petsitters/default_pet_sitter.jpg", alt: "Default pet sitter photo", class: "img-fluid rounded shadow", style: "height: 120px; width: 120px; object-fit: cover;" %>
      <% end %>
    </div>

    <!-- Informations personnelles -->
    <div class="flex-grow-1">
      <h5 class="mb-2"><%= @pet_sitter_profile.first_name %> <%= @pet_sitter_profile.last_name %></h5>
      <p class="text-muted fs-4"><strong><%= @pet_sitter_profile.nickname.capitalize || "Not provided" %></strong></p>
      <p><i class="fas fa-envelope me-2 text-secondary"></i> <%= @pet_sitter_profile.email %></p>
      <p><i class="fas fa-map-marker-alt me-2 text-secondary"></i><strong>Address:</strong> <%= @pet_sitter_profile.address || "Not provided" %></p>
      <p><i class="fas fa-align-left me-2 text-secondary"></i><strong>About me:</strong> <%= @pet_sitter_profile.description || "Not provided" %></p>
      <p><i class="fas fa-dollar-sign me-2 text-secondary"></i><strong>Price per day:</strong> <%= @pet_sitter_profile.price_per_day || "Not provided" %> </p>

      <!-- Section de notation -->
      <div class="mt-3">
        <h6><i class="fas fa-star text-warning me-2"></i>Rating:</h6>
        <p><strong><%= @pet_sitter_profile.average_rating || 0 %>/5</strong></p>
      </div>
    </div>
  </div>

  <!-- Bouton rÃ©servation -->
  <div class="text-center mt-4">
    <%= link_to "Book Now", new_pet_sitter_reservation_path(@pet_sitter_profile),
        class: "btn btn-book-now btn-sm rounded-pill shadow-sm px-3 py-2" %>
  </div>
</div>
