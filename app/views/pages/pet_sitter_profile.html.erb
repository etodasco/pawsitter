
<div class="container mt-4">
  <!-- Header Section -->
  <div class="text-center mb-4">
    <h1>ðŸ‘¤ <%= @pet_sitter_profile.nickname.capitalize %>'s Profile Page:</h1>
  </div>

  <div class="card shadow-sm p-4">
    <div class="row mb-3">
      <div class="col-12 text-center">
        <h3 class="text-primary"><%= @pet_sitter_profile.nickname %> <%= @pet_sitter_profile.last_name %></h3>
      </div>
    </div>

    <!-- Personal Information -->
    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        <h3 class="user-info">Personal Information</h3>
        <div class="col-md-6 mb-3">
          <div class="row">
            <!-- First Column -->
            <div class="col-md-6 mb-3">
              <p><i class="fas fa-user me-2 text-secondary"></i><strong>First Name:</strong> <%= @pet_sitter_profile.first_name || "Not provided" %></p>
              <p><i class="fas fa-user me-2 text-secondary"></i><strong>Last Name:</strong> <%= @pet_sitter_profile.last_name || "Not provided" %></p>
              <p><i class="fas fa-user me-2 text-secondary"></i><strong>Nickname:</strong> <%= @pet_sitter_profile.nickname || "Not provided" %></p>
            </div>

            <!-- Second Column -->
            <div class="col-md-6 mb-3">
              <p><i class="fas fa-envelope me-2 text-secondary"></i><strong>Email:</strong> <%= @pet_sitter_profile.email %></p>
              <p><i class="fas fa-map-marker-alt me-2 text-secondary"></i><strong>Address:</strong> <%= @pet_sitter_profile.address || "Not provided" %></p>
              <p><i class="fas fa-align-left me-2 text-secondary"></i><strong>About me:</strong>
              <%# <%= @user.description || "Not provided" %></p>
            </div>
          </div>

<!--add a review -->
<%= form_with model: @review, url: reviews_path, method: :post, local: true, id: "review-form" do |form| %>
  <div class="star-rating">
    <%= form.label :rating, "Your Rating", class: "form-label" %>
    <div class="stars">
      <% 1.upto(5) do |star| %>
        <%= form.radio_button :rating, star, id: "star-#{star}", class: "d-none", data: { star_value: star } %>
        <label for="star-<%= star %>" class="star-label" style="cursor: pointer;">â˜…</label>
      <% end %>
    </div>
  </div>
<% end %>

